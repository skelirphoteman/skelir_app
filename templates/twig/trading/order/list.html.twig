{% extends 'twig/app.html.twig' %}


{% block content %}

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
        </tr>
        </thead>
        <tbody>
        {% for row in rows %}
            <tr>
                <th scope="row">{{ row.crypto }}</th>
                <th >{{ row.buy }} $</th>
                <td>{{ row.current }} $</td>
                <td>{{ row.result }} %</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}